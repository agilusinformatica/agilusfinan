                </div>*@
            </form>
        </div>
        <ul class="nav navbar-top-links navbar-right">
            <li>
                <span class="m-r-sm text-muted welcome-message" data-i18n="topnav.welcometext">
                    @if (imageDataUrl != "")
                    {
                        <img alt="image" class="img-small" src="@imageDataUrl" width="150" height="40" />
